<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.android.data.model.MovieDetailModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movieGalleryRv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/recyclerview_movie_image" />

        <ImageView
            android:id="@+id/moviePosterIv"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            app:image="@{item.poster.original}"
            app:layout_constraintBottom_toBottomOf="@+id/movieGalleryRv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieGalleryRv"
            tools:ignore="ContentDescription"
            tools:srcCompat="@color/colorAccent" />

        <TextView
            android:id="@+id/movieTitleTv"
            style="@style/App.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@{item.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/moviePosterIv"
            app:layout_constraintTop_toBottomOf="@+id/movieGalleryRv"
            tools:text="Movie Title" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:rating="4"
            app:layout_constraintStart_toStartOf="@+id/movieTitleTv"
            app:layout_constraintTop_toBottomOf="@+id/movieTitleTv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movieGenresRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moviePosterIv"
            tools:listitem="@layout/recyclerview_genre" />

        <TextView
            android:id="@+id/movieDetailTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{item.overview}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movieGenresRv"
            tools:text="Movie Detail" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>